var getDateDiff = function (date) {
    var result;
    var minute = 1000 * 60;
    var hour = minute * 60;
    var day = hour * 24;
    var halfamonth = day * 15;
    var month = day * 30;
    var now = getDate().getTime();
    var date = getDate(Date.parse(date));
    var diffValue = now - date;
    if (diffValue < 0) {
        return;
    }
    var monthC = diffValue / month;
    var weekC = diffValue / (7 * day);
    var dayC = diffValue / day;
    var hourC = diffValue / hour;
    var minC = diffValue / minute;
    if (monthC >= 1) {
        if (monthC <= 12)
            result = "" + parseInt(monthC) + "月前";
        else {
            result = "" + parseInt(monthC / 12) + "年前";
        }
    }
    else if (weekC >= 1) {
        result = "" + parseInt(weekC) + "周前";
    }
    else if (dayC >= 1) {
        result = "" + parseInt(dayC) + "天前";
    }
    else if (hourC >= 1) {
        result = "" + parseInt(hourC) + "小时前";
    }
    else if (minC >= 1) {
        result = "" + parseInt(minC) + "分钟前";
    } else {
        result = "刚刚";
    }
    return result;
};


var formatNumber = function (n) {
    n = n.toString()
    return n[1] ? n : '0' + n
}
var formatTime = function (date) {
    if (date) {
        var date = getDate(Date.parse(date));
        var year = date.getFullYear()
        var month = date.getMonth() + 1
        var day = date.getDate()
        var hour = date.getHours()
        var minute = date.getMinutes()
        var second = date.getSeconds()

        return [year, month, day].map(formatNumber).join('/') + ' ' + [hour, minute, second].map(formatNumber).join(':')
    }
}


var indexOf = function (Alldate,item) {
    return Alldate.indexOf(item)
}
var includes = function (allData,item) {
    for(var i = 0; i < allData.length; i++) {
        if (allData[i].floor === item) {
            return true;
        }
    }
    return false;
}
module.exports = {
    formatTime: formatTime,
    getDateDiff: getDateDiff,
    indexOf:indexOf,
    includes: includes
}
