/**index.wxss**/

page {
  background: #F5F5F5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.container {
  align-items: center;
}
.flex {
  display: flex;
}
.block {
  display: block;
}
.publish {
  position: absolute;
  top: 80rpx;
  text-align: center;
  color: #ffffff;
  padding: 15rpx 0;
}
.publish-time {
  margin: 20rpx 0 0 0;
}
.title {
  padding: 20rpx;
  font-weight: 500;
}
.detailBg {
  background: blue;
  width: 100%;
}
.detail {
  margin: 15rpx 0 5rpx;
  width: 100%;
}
.detail-item {
  position: relative;
  background: #ffffff;
  margin-bottom: 5rpx;
}
.detail-info {
  flex: 1;
}
.detail-author {
  font-size: 30rpx;
  color:#8799a3;
  padding: 20rpx 0;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 10rpx 30rpx;
}
.detail-time {
  font-size: 30rpx;
  color: #aaaaaa;
}
.detail-content {
  font-size: 28rpx;
  padding: 10rpx 50rpx;
  text-align:justify;
}
.like {
  width: 150rpx;
  justify-content: center;
  align-items: center;
}
.like-count {
  margin: 10rpx 3rpx 0 0;
}
.zan {
  width: 40rpx;
  height: 40rpx;
}
.text-elli {
  width: 100px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.continue-input {
  border: 1px solid gray;
  border-radius: 10rpx;
  width: 98%;
  margin: 10rpx 6rpx;
  height: 200rpx;
}
.continue-btn {
  position: fixed;
  bottom: 10rpx;
  right: 10rpx;
}
.cover {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: gray;
  z-index: 2;
  opacity: 0.8;
}
.pop-win {
  position: absolute;
  z-index: 2;
  top: 30%;
  background: #ffffff;
  width: 80%;
  border-radius: 10rpx;
}
.story-btn {
  height: 65rpx;
  width: 150rpx;
  line-height: 65rpx;
  margin: 20rpx 0;
  background: gray;
  text-align: center;
  border-radius: 10rpx;
  color: #ffffff;
}
.confirm {
  background: blue;
  margin: 20rpx 15rpx;
}