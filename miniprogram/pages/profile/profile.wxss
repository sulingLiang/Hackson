.UCenter-bg {
  background-image: url(https://surx.oss-cn-beijing.aliyuncs.com/image/sky-stars-constellations-astronomy-preview.jpg);
  background-size: cover;
  height: 500rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen; 
  background: #fff; 
  height: 100rpx;   
}

.bg-color-white {
  background: #fff;
  height: 50vh;
}
/* 用户头像 */
.profile-wrap .bg-white {
	background-color: rgba(255, 255, 255, 0);
	color: var(--white);
}
.profile-wrap .avatar {
  position: absolute;
  top:20%;
  left: 5%;
}
/* 收藏 */
.profile-wrap scroll-view {
  width: auto;
  position: absolute;
  top: 37%;
  right: 0;
  z-index: 99;
}
.profile-wrap .nav .cu-item {
  margin-bottom: 30rpx;
  width: 110rpx;
  height: 110rpx;
  line-height: 110rpx;
  border-radius: 50%;
}
.like {
  /* background: var(--gradualRed); */
  background: linear-gradient(45deg, #ff74be, #ffa9d3);
}
.partake {
  /* background: var(--gradualPurple); */
  background: linear-gradient(45deg, #c159ee, #c1c7d8);
}
.publish {
  /* background: var(--gradualBlue); */
	background: linear-gradient(45deg, #2a9eed, #9adafe);
}
.profile-wrap .nav [class*="cuIcon-"] {
	font-size: 50rpx;
  color: #fff;
}
/* 阴影 */
/* .shadow[class*='white'] {
	--ShadowSize: 0 1rpx 6rpx;
} */

.profile-wrap .shadow-lg {
	--ShadowSize: 0rpx 40rpx 100rpx 0rpx;
}
.profile-wrap .shadow-warp {
	position: relative;
}
.profile-wrap .shadow-warp-red {
	box-shadow: 0 10rpx 20rpx -5rpx #ffa9d3;
}
.shadow-warp-purple {
	box-shadow: 0 10rpx 20rpx -5rpx #c1c7d8;
}
.profile-wrap .shadow-warp-blue {
	box-shadow: 0 10rpx 20rpx -5rpx #9adafe;
}

.profile-wrap .shadow-warp:before,
.profile-wrap .shadow-warp:after {
	position: absolute;
	content: "";
	top: 20rpx;
	bottom: 30rpx;
	left: 20rpx;
	width: 50%;
	box-shadow: 130rpx 330rpx 20rpx #ffa9d3;
	transform: rotate(-3deg);
	z-index: -1;
}
.profile-wrap .list-warp {
  position: absolute;
  top: 49%;
  width: 100%;
}
